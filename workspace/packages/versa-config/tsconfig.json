{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "lib/types",
    "esModuleInterop": true,
    "incremental": true,
    "lib": ["es2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./tests/**/*.ts"],
  "ts-node": {
    "files": true
  },
  "files": ["src/index.ts", "tests/typings.d.ts"]
}
